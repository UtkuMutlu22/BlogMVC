@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AcenteWeb</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
</head>
<body class="accountbg">

    <div class="d-flex flex-column justify-content-center align-items-center h-100">

        <div class="card p-3 ">
            <div class="card-body">

                <h3 class="text-center mt-0 mb-15">
                    <img src="~/images/logo.png" alt="AcenteWeb">
                </h3>

                <div class="p-3">
                    <form method="post" novalidate>

                        <div class="form-group row">
                            <div class="col-12">
                                <input class="form-control" asp-for="UserName" placeholder="@Html.DisplayNameFor(m=>m.UserName)">
                                <span asp-validation-for="UserName"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-12">
                                <input class="form-control" asp-for="Password" placeholder="@Html.DisplayNameFor(m=>m.Password)">
                                <span asp-validation-for="Password"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-12">
                                <div class="custom-control custom-checkbox">
                                    <input asp-for="IsPersistent" class="custom-control-input">
                                    <label class="custom-control-label" for="IsPersistent">Oturum Açık Kalsın</label>
                                </div>
                            </div>
                        </div>

                        @if (!ViewContext.ModelState.IsValid)
                        {
                            <div asp-validation-summary="All"></div>
                        }

                        <div class="form-group text-center row m-t-20">
                            <div class="col-12">
                                <button class="btn btn-danger btn-block waves-effect waves-light" type="submit">
                                    <i class="fa fa-sign-in-alt"></i> Giriş Yap
                                </button>
                            </div>
                        </div>

                        <div class="form-group m-t-10 mb-0 row">
                            <div class="col-sm-7 m-t-20">
                                <a asp-action="ForgotPassword" class="text-muted"><i class="fa fa-lock"></i> <small>Parolamı yenile</small></a>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/fastclick.js"></script>
    <script src="~/js/detect.js"></script>
    <script src="~/js/jquery.blockUI.js"></script>
    <script src="~/js/jquery.nicescroll.js"></script>
    <script src="~/js/jquery.scrollTo.min.js"></script>
    <script src="~/js/jquery.slimscroll.js"></script>
    <script src="~/js/waves.js"></script>
    <script src="~/js/app.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
